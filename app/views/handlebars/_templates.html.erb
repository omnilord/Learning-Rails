            <i class="glyphicon glyphicon-user"></i>
            View
          </a>
          {{#if friend.is_friend}}
            <button class="btn btn-danger btn-xs remove-friendship">
              <i class="glyphicon glyphicon-trash"></i> Remove
            </button>
          {{else}}
            <button class="btn btn-success btn-xs add-friendship">
              <i class="glyphicon glyphicon-plus"></i> Add Friend
            </button>
          {{/if}}
        </span>
      </div>
    </div>
  </div>
</div>
</script>


