<div class="container">
  <div class="row text-center">
    <div class="col-lg-10 col-lg-offset-1 page-header">
      <h1><%= @image.name.titleize %></h1>
    </div>

    <div class="col-lg-10 col-lg-offset-1 page-header">
      <%= image_tag(@image.picture.url) if @image.picture? %>
      <br/>
      <strong><%= Image.human_attribute_name(:user_id) %>:</strong>
      <%= @image.user.email %>
    </div>

    <div class="col-lg-10 col-lg-offset-1 page-header">
      <%= link_to t('.back', default: t("helpers.links.back")),
                    images_path, class: 'btn btn-default'  %>
      <%= link_to t('.edit', default: t("helpers.links.edit")),
                    edit_image_path(@image), class: 'btn btn-default' %>
      <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                    image_path(@image),
                    method: 'delete',
                    data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                    class: 'btn btn-danger' %>
    </div>
  </div>
</div>
