<% if flash.any? %>
<div class="container">
  <div class="row flash">
  <% flash.each do |type, msg| %>
    <% cls = case type
             when 'notice' then 'info'
             when 'alert' then 'danger'
             else type
             end %>
    <div class="col-xs-10 col-xs-offset-1 alert alert-<%= cls %> flash-msg">
      <a href="#" class="close" data-dismiss="alert">&#215;</a>
      <ul>
        <%= Array(msg).map { |s| "<li>#{sanitize(s)}</li>" }.join('').html_safe %>
      </ul>
    </div>
  <% end %>
  </div>
</div>
<% end %>
