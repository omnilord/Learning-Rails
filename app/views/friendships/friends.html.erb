<script>
$(function () {
  var $this = $('#main_content');

  $.ajax({
    url: '/friends',
    method: 'GET',
    dataType: 'json',
    beforeSend: () => {
      $this.html('<i class="fa fa-spinner fa-spin"></i>');
    }
  })
    .done(function (data) {
      $this.html(window.templates.friends(data));
    });
});
</script>
