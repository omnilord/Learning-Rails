<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
              data-target="#top-nav-bar-content" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, title: 'Home', class: 'navbar-brand', id: 'navlogo' do %>
        <i class="fa fa-usd fa-2x"></i>
      <% end %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="top-nav-bar-content">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
        <li>
          <%= link_to 'My Portfolio', portfolio_path %>
        </li>
        <li>
          <%= link_to 'Friends', friends_path %>
        </li>
        <% end %>
        <li>
          <%= link_to 'About', about_path %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li>
          <%= link_to current_user.fullname, edit_registration_path(current_user) %>
        </li>
        <li>
          <%= link_to "Logout", destroy_user_session_path, method: :delete %>
        </li>
        <% else %>
        <li>
          <%= link_to "Login", new_user_session_path %>
        </li>
        <li>
          <%= link_to "Sign Up", new_user_registration_path %>
        </li>
        <% end %>
        <li class="toggling-forms-parent">
          <%= render 'layouts/elements/search_form', searches: [
            {
              name: 'Stocks',
              icon: 'line-chart',
              search_path: search_stocks_path,
              placeholder: 'Ticker',
              value: (params['s'].nil? ? nil : params['s']),
              template: 'stock_search_result',
              default: !params['s'].nil? || params['u'].nil?
            }, {
              name: 'Users',
              icon: 'users',
              search_path: search_users_path,
              placeholder: 'Username, Email...',
              value: (params['u'].nil? ? nil : params['u']),
              template: 'user_search_result',
              default: params['s'].nil? && params['u'].present?
            }
          ] %>
        </li>
      </ul>
    </div>
  </div>
</nav>
