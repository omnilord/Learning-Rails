<%= render 'components/errors', obj: @article %>

<div class="form-group">
<%= form_for @article do |f| %>
  <input type="hidden" name="tags_check" value="<%= @tags.join('||') %>" />
  <div class="col-xs-8 col-xs-offset-2">
    <%= f.text_field :title, class: 'form-control', placeholder: 'Title of Article' %><br />
  </div>
  <div class="col-xs-8 col-xs-offset-2">
    <%= f.text_area :body, class: 'form-control', placeholder: 'Body of article.' %><br />
  </div>
  <div class="col-xs-8 col-xs-offset-2">
    <fieldset>
      <legend>Tags</legend>
      <% @tags.each do |tag| %>
      <label><%= f.check_box(:tags, { multiple: true }, tag, nil) << tag %></label>
      <% end %>
    </fieldset>
  </div>
  <div class="col-xs-8 col-xs-offset-2" align="center">
    <%= f.submit class: 'btn btn-sm btn-primary' %>
  </div>
<% end %>
</div>
